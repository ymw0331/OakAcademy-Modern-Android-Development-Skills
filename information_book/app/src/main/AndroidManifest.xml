<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wayneyong.information_book">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Information_book">
        <activity
            android:name=".activities.WondersActivity"
            android:theme="@style/Theme.NoToolBar"/>
        <activity
            android:name=".activities.MuseumsActivity"
            android:theme="@style/Theme.NoToolBar" />
        <activity
            android:name=".activities.LeadersActivity"
            android:theme="@style/Theme.NoToolBar" />
        <activity
            android:name=".activities.CountriesActivity"
            android:theme="@style/Theme.NoToolBar" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>